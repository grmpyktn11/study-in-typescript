  "description": "",
  "devDependencies": {
    "@types/node": "^25.2.0",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "electron": "^40.1.0",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1",
    "node-gyp": "^12.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "node-addon-api": "^8.5.0"
  }
}