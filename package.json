{
  "name": "electron-app",
  "version": "1.0.0",
  "main": "dist/main.js",
  "scripts": {
    "postinstall": "cd native && npm install && npx node-gyp rebuild",
    "build": "tsc && copyfiles -u 1 src/**/*.html dist && copyfiles -u 1 src/**/*.css dist",
    "build:native": "cd native && npx node-gyp rebuild",
    "watch": "tsc --watch",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "clean": "rm -rf dist"
  },
